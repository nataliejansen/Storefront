@model IEnumerable<FurnitureSteals.DATA.EF.Models.Product>

@{
    ViewData["Title"] = "TiledProducts";
}

<div class="container" align="center">
    <p>
        <h1> Our Products</h1>
        <a asp-action="Create" class="btn btn-primary text-center">Add a Product</a>
        <a asp-action="Index" class="btn btn-primary btn-small">List View</a>
    </p>

</div>

<div class="container" align="center">
    <div class="row">

        @foreach (var item in Model)
        {
            <div class="col-sm-6 col-md-4 col-lg-4">
                <div class="box">
                    <div class="img-box">
                        <img src="~/images/@item.ProductImage" alt="@item.ProductDescription">
                        @Html.DisplayFor(modelItem => item.ProductImage)
                    </div>
                    <div class="detail-box">
                        @Html.DisplayFor(modelItem => item.CollectionName)
                        @Html.DisplayFor(modelItem => item.ProductDescription)
                        @Html.DisplayFor(modelItem => item.Price)
                    </div>
                    <div>
                        <a asp-action="Details" asp-route-id="@item.ProductId">Details</a>
                    </div>

                </div>
            </div>
        }
        </div>
</div>
